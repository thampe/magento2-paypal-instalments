<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <iways_paypalinstalments>
            <api>
                <client_id backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <client_secret backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <mode>sandbox</mode>
            </api>
        </iways_paypalinstalments>
        <payment>
            <iways_paypalinstalments_payment>
                <model>Iways\PayPalInstalments\Model\Payment</model>
                <title>PayPal Instalments</title>
                <payment_action>authorize</payment_action>
                <can_use_checkout>1</can_use_checkout>
                <active>0</active>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
                <sort_order>-1</sort_order>
                <group>paypal</group>
                <min_order_total>100</min_order_total>
            </iways_paypalinstalments_payment>
        </payment>
    </default>
</config>
